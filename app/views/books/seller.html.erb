<% provide(:title, "Book Listings") %>
<h1>Book Listings </h1>
<hr>
<div class="center">
  <div id="books-index">
    <div class="row">
        <% @books.each do |book| %>
          <div class="col-md-2">
            <%=link_to (image_tag 'http://placehold.it/150x200', class: 'thumbnail'),book %>
            <div class="caption">
              <h5><%=link_to book.title ,book %></h5>
            <%=(number_to_currency(book.price)) %>
             <% if (user_signed_in?) && (current_user == book.user)%>
           <%= link_to 'Edit', edit_book_path(book), class: "btn btn-link"%>

           <% link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?'},
              class: "btn-btn-link"%>
            <%end%>
              </div>
            </div>
          <% end %>
      </div>
      <nav aria-label="arial">
  <ul class="pager">

  </ul>
</nav>

  </div>
  </div>

<%= link_to 'New Book', new_book_path %>
