<% provide(:title, "Seller Book Listings") %>

<h1>Seller Book Listings </h1>

<% if (user_signed_in?) %>
<%= link_to 'New Book', new_book_path, class: "btn btn-link" %>
<%end%>
<nav aria-label="arial">
<ul class="pager">
<%= will_paginate @books%>
</ul>
</nav>
<table class="table table-striped table-bordered">
  <tr>
 <th class="center">Image</th>
 <th class="center">Title</th>
 <th class="center">Author</th>
 <th class="center">Isbn</th>
 <th class="center">Price</th>
 <th class="center">Action</th>

  </tr>
  <% @books.each do |book| %>

  <tr>
    <td><%=image_tag 'http://placehold.it/150x200', class: 'thumbnail' %></td>
    <td><%= book.title %></td>
    <td><%= book.author%></td>
    <td><%= book.isbn %></td>
    <td><%= number_to_currency(book.price) %></td>
    <td><div class="btn-group">
 <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
   Action <span class="caret"></span>
 </button>
 <ul class="dropdown-menu" role="menu">
      <%= link_to "View", book, class: "btn btn-link" %>
       <%= link_to "Edit", edit_book_path(book), class: "btn btn-link" %>
       <%= link_to 'Destroy', book, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-link"%>
    </ul>
    </div>
      </td>

  </tr>
<% end %>

</table>
<hr>
