<% provide(:title, "Book Listings") %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subject</th>
      <th>Author</th>
      <th>Description</th>
      <th>Publisher</th>
      <th>Isbn</th>
      <th>Year</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.subject%></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td>
        <td><%= book.year %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', book, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' },
          class: "btn btn-info"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-info" %>
