<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "USED TEXTBOOKS", root_path , id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to root_path do %>
              <i class="glyphicon glyphicon-home"></i>
              Home
              <% end %>
            </li>

        <% if user_signed_in? %>
          <li>
            <%= link_to "SELL / NEW", new_book_path,class: "btn btn-light btn-sm pull-left"%>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <b class="caret"></b>

            <%=current_user.name%>
            </a>
            <ul class="dropdown-menu">
                <li><%= link_to "Listing History",seller_path %></li>

              <li class="divider">
              <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>

              </li>
              <li>
                <div class="col-md-10">
                  <%= link_to destroy_user_session_path,class: "btn btn-default btn-sm pull-right", method: :delete do %>
                  <i class="glyphicon glyphicon-off"></i>
                  Sign Out
                  <% end %>
                </div>
              </li>
            </ul>

        <% else %>
              <!-- Log In -->
              <li><%= link_to new_user_session_path do %>
                <i class="glyphicon glyphicon-log-out"></i>
                Log In
                <% end %>
              </li>
              <% end %>

      </nav>
    </div>
</header>
